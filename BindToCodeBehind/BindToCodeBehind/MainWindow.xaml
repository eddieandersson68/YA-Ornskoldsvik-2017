<Window x:Class="BindToCodeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindToCodeBehind"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>  
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
        <Button x:Name ="Button1" Content="Change the text" Click="ButtonBase_OnClick" Grid.Column="0" Grid.Row="0"/> 
        <Label x:Name="Label1" Content="{Binding MyText}" Grid.Column="0" Grid.Row="1"/>
    </Grid>
</Window>
